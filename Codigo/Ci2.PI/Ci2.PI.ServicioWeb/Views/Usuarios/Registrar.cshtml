@using Ci2.PI.ServicioWeb.Models
@model Ci2.PI.ServicioWeb.Models.UsuarioRegistrarViewModel

@{
    ViewBag.Title = "Registrar usuario";
}

@using (Html.BeginForm("Registrar", "Usuarios", FormMethod.Post, new { autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <div class="panel contenedor-formulario-pequeño-punto">
                <div class="panel-heading">
                    <h2>@ViewBag.Title</h2>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.NombreUsuario)
                            </div>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.NombreUsuario, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.Contraseña)
                            </div>
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.ConfirmacionDeContraseña)
                            </div>
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.ConfirmacionDeContraseña, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ConfirmacionDeContraseña, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.CorreoElectronico)
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.CorreoElectronico, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                                @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.NumeroTelefonico)
                            </div>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.NumeroTelefonico, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NumeroTelefonico, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer text-center">
                    @Html.ActionLink("Volver a la lista", "Index", "Usuarios", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Registrar" class="btn btn-primary btn-default" />
                </div>
            </div>
        </div>
    </div>

}
